@model ListaDeDesenhos.Models.Desenho
@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes do Desenho</h2>

<dl class="row">
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>

    <dt class="col-sm-2">Data</dt>
    <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>

    <dt class="col-sm-2">Material</dt>
    <dd class="col-sm-10">@Model.Material</dd>

    <dt class="col-sm-2">Descrição</dt>
    <dd class="col-sm-10">@Model.Descricao</dd>

    <dt class="col-sm-2">Nota</dt>
    <dd class="col-sm-10">@Model.NotaDesempenho</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
